@model StudentManagement.Models.Student

@{
    Layout = "_Layout";
}

<h1>Delete Student</h1>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <dl class="row">
            <dt class = "col-sm-2">
                First Name
            </dt>
            <dd class = "col-sm-10">
                @Model.FirstName
            </dd>
            <dt class = "col-sm-2">
                Last Name
            </dt>
            <dd class = "col-sm-10">
                @Model.LastName
            </dd>
            <dt class = "col-sm-2">
                Email
            </dt>
            <dd class = "col-sm-10">
                @Model.Email
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
